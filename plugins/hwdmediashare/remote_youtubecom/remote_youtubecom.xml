<?xml version="1.0" encoding="utf-8"?>
<extension type="plugin" group="hwdmediashare" version="3.0" method="upgrade">
	<name>plg_hwdmediashare_remote_youtubecom</name>
	<author>HWD</author>
	<creationDate>@@CREATIONDATE@@</creationDate>
