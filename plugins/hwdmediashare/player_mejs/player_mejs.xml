<?xml version="1.0" encoding="utf-8"?>
<extension version="2.5" type="plugin" group="hwdmediashare" method="upgrade">
	<name>plg_hwdmediashare_player_mejs</name>
	<creationDate>2013-10-24</creationDate>
	<author>Highwood Design</author>
	<authorEmail>info@hwdmediashare.co.uk</authorEmail>
	<authorUrl>http://hwdmediashare.co.uk</authorUrl>
	<copyright>(C) 2011 - 2013 Highwood Design Limited</copyright>
	<license>GNU/GPL http://www.gnu.org/copyleft/gpl.html</license>
	<version>1.1.12</version>
	<description>PLG_HWDMEDIASHARE_PLAYER_MEJS_XML_DESCRIPTION</description>
	<files>
		<filename plugin="player_mejs">player_mejs.php</filename>
		<filename>index.html</filename>
		<folder>assets</folder>
	</files>
	<languages>
		<language tag="en-GB">language/en-GB.plg_hwdmediashare_player_mejs.ini</language>
		<language tag="en-GB">language/en-GB.plg_hwdmediashare_player_mejs.sys.ini</language>
	</languages>
	<config>
		<fields name="params">
			<fieldset name="basic">
				<field 
                                        name="startVolume" 
                                        type="list"
					default="0.8"
					label="PLG_HWDMEDIASHARE_PLAYER_MEJS_FIELD_VOLUME_LABEL"
					description="PLG_HWDMEDIASHARE_PLAYER_MEJS_FIELD_VOLUME_DESC"
				>
					<option value="0.0">0.0</option>
					<option value="0.1">0.1</option>
					<option value="0.2">0.2</option>
					<option value="0.3">0.3</option>
					<option value="0.4">0.4</option>
					<option value="0.5">0.5</option>
					<option value="0.6">0.6</option>
					<option value="0.7">0.7</option>
					<option value="0.8">0.8</option>
					<option value="0.9">0.9</option>
					<option value="1.0">1.0</option>
				</field>
                                <field 
                                        name="enableAutosize" 
                                        type="radio"
					default="true"
					label="PLG_HWDMEDIASHARE_PLAYER_MEJS_FIELD_AUTOSIZE_LABEL"
					description="PLG_HWDMEDIASHARE_PLAYER_MEJS_FIELD_AUTOSIZE_DESC"
				>
					<option value="false">JNO</option>
					<option value="true">JYES</option>
				</field>
                                <field 
                                        name="alwaysShowControls" 
                                        type="radio"
					default="false"
					label="PLG_HWDMEDIASHARE_PLAYER_MEJS_FIELD_SHOWCONTROLS_LABEL"
					description="PLG_HWDMEDIASHARE_PLAYER_MEJS_FIELD_SHOWCONTROLS_DESC"
				>
					<option value="false">JNO</option>
					<option value="true">JYES</option>
				</field>
                                <field 
                                        name="iPadUseNativeControls" 
                                        type="radio"
					default="false"
					label="PLG_HWDMEDIASHARE_PLAYER_MEJS_FIELD_IPADNATIVE_LABEL"
					description="PLG_HWDMEDIASHARE_PLAYER_MEJS_FIELD_IPADNATIVE_DESC"
				>
					<option value="false">JNO</option>
					<option value="true">JYES</option>
				</field>
                                <field 
                                        name="iPhoneUseNativeControls" 
                                        type="radio"
					default="false"
					label="PLG_HWDMEDIASHARE_PLAYER_MEJS_FIELD_IPHONENATIVE_LABEL"
					description="PLG_HWDMEDIASHARE_PLAYER_MEJS_FIELD_IPHONENATIVE_DESC"
				>
					<option value="false">JNO</option>
					<option value="true">JYES</option>
				</field>
                                <field 
                                        name="AndroidUseNativeControls" 
                                        type="radio"
					default="false"
					label="PLG_HWDMEDIASHARE_PLAYER_MEJS_FIELD_ANDROIDNATIVE_LABEL"
					description="PLG_HWDMEDIASHARE_PLAYER_MEJS_FIELD_ANDROIDNATIVE_DESC"
				>
					<option value="false">JNO</option>
					<option value="true">JYES</option>
				</field>
                                <field 
                                        name="alwaysShowHours" 
                                        type="radio"
					default="false"
					label="PLG_HWDMEDIASHARE_PLAYER_MEJS_FIELD_SHOWHOURS_LABEL"
					description="PLG_HWDMEDIASHARE_PLAYER_MEJS_FIELD_SHOWHOURS_DESC"
				>
					<option value="false">JNO</option>
					<option value="true">JYES</option>
				</field>                          
                                <field 
                                        name="showTimecodeFrameCount" 
                                        type="radio"
					default="false"
					label="PLG_HWDMEDIASHARE_PLAYER_MEJS_FIELD_SHOWTIMECODE_LABEL"
					description="PLG_HWDMEDIASHARE_PLAYER_MEJS_FIELD_SHOWTIMECODE_DESC"
				>
					<option value="false">JNO</option>
					<option value="true">JYES</option>
				</field>                          
                                <field 
                                        name="framesPerSecond" 
                                        type="text"
					default="25"
					label="PLG_HWDMEDIASHARE_PLAYER_MEJS_FIELD_KEYFRAMES_LABEL"
					description="PLG_HWDMEDIASHARE_PLAYER_MEJS_FIELD_KEYFRAMES_DESC"
				/>
                                <field 
                                        name="pauseOtherPlayers" 
                                        type="radio"
					default="true"
					label="PLG_HWDMEDIASHARE_PLAYER_MEJS_FIELD_PAUSEOTHERS_LABEL"
					description="PLG_HWDMEDIASHARE_PLAYER_MEJS_FIELD_PAUSEOTHERS_DESC"
				>
					<option value="false">JNO</option>
					<option value="true">JYES</option>
				</field>                                 
			</fieldset>
		</fields>
	</config>
</extension>
