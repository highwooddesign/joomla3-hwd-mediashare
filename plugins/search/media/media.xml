	<version>@@VERSION@@</version>  
	<description>PLG_SEARCH_MEDIA_XML_DESCRIPTION</description>
        <files>
		<filename plugin="media">media.php</filename>
		<filename>language/en-GB/en-GB.plg_search_media.sys.ini</filename>
		<filename>index.html</filename>
	</files>
	<languages>
		<language tag="en-GB">language/en-GB/en-GB.plg_search_media.ini</language>
		<language tag="en-GB">language/en-GB/en-GB.plg_search_media.sys.ini</language>
	</languages>
	<config>
		<fields name="params">
                        <fieldset 
                                name="basic"
                        >
                                <field 
                                        name="use_caching" 
                                        type="radio"
					label="PLG_SEARCH_MEDIA_FIELD_USE_CACHING_LABEL"
					description="PLG_SEARCH_MEDIA_FIELD_USE_CACHING_DESC"
                                        class="btn-group btn-group-yesno"
					default="1"
				>
					<option value="1">JYES</option>
					<option value="0">JNO</option>
				</field>   
				<field 
                                        name="search_limit" 
                                        type="text"
					label="PLG_SEARCH_MEDIA_FIELD_SEARCHLIMIT_LABEL"
					description="PLG_SEARCH_MEDIA_FIELD_SEARCHLIMIT_DESC"
					default="50"
				/>                                                                                              
			</fieldset>                    
			<fieldset 
                                name="areas"
				label="PLG_SEARCH_MEDIA_FIELDSET_AREAS_LABEL"
			>    
                                <field 
                                        name="search_media" 
                                        type="radio"
					label="PLG_SEARCH_MEDIA_FIELD_SEARCH_MEDIA_LABEL"
					description="PLG_SEARCH_MEDIA_FIELD_SEARCH_MEDIA_DESC"
                                        class="btn-group btn-group-yesno"
					default="1"                                        
				>
					<option value="1">JYES</option>
					<option value="0">JNO</option>
				</field> 
                                <field 
                                        name="search_albums" 
                                        type="radio"
					label="PLG_SEARCH_MEDIA_FIELD_SEARCH_ALBUMS_LABEL"
					description="PLG_SEARCH_MEDIA_FIELD_SEARCH_ALBUMS_DESC"
                                        class="btn-group btn-group-yesno"
					default="1"                                      
				>
					<option value="1">JYES</option>
					<option value="0">JNO</option>
				</field> 
                                <field 
                                        name="search_channels" 
                                        type="radio"
					label="PLG_SEARCH_MEDIA_FIELD_SEARCH_CHANNELS_LABEL"
					description="PLG_SEARCH_MEDIA_FIELD_SEARCH_CHANNELS_DESC"
                                        class="btn-group btn-group-yesno"
					default="1"                                        
				>
					<option value="1">JYES</option>
					<option value="0">JNO</option>
				</field>                                 
                                <field 
                                        name="search_groups" 
                                        type="radio"
					label="PLG_SEARCH_MEDIA_FIELD_SEARCH_GROUPS_LABEL"
					description="PLG_SEARCH_MEDIA_FIELD_SEARCH_GROUPS_DESC"
                                        class="btn-group btn-group-yesno"
					default="1"
				>
					<option value="1">JYES</option>
					<option value="0">JNO</option>
				</field> 
                                <field 
                                        name="search_playlists" 
                                        type="radio"
					label="PLG_SEARCH_MEDIA_FIELD_SEARCH_PLAYLISTS_LABEL"
					description="PLG_SEARCH_MEDIA_FIELD_SEARCH_PLAYLISTS_DESC"
                                        class="btn-group btn-group-yesno"
					default="1"                                         
				>
					<option value="1">JYES</option>
					<option value="0">JNO</option>
				</field> 
			</fieldset>   
			<fieldset 
                                name="fields"
                                label="PLG_SEARCH_MEDIA_FIELDSET_FIELDS_LABEL"
			>    
                                <field 
                                        name="search_title" 
                                        type="radio"
					label="PLG_SEARCH_MEDIA_FIELD_SEARCH_TITLE_LABEL"
					description="PLG_SEARCH_MEDIA_FIELD_SEARCH_TITLE_DESC"
                                        class="btn-group btn-group-yesno"
					default="1"                                        
				>
					<option value="1">JYES</option>
					<option value="0">JNO</option>
