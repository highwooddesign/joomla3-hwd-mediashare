<?xml version="1.0" encoding="utf-8"?>
<extension type="plugin" group="content" version="3.0" method="upgrade">
	<name>plg_content_media</name>
	<author>HWD</author>
	<creationDate>@@CREATIONDATE@@</creationDate>
	<copyright>(C) 2014 Highwood Design Limited</copyright>
	<license>GNU/GPL http://www.gnu.org/copyleft/gpl.html</license>
	<authorEmail>info@hwdmediashare.co.uk</authorEmail>
	<authorUrl>http://hwdmediashare.co.uk</authorUrl>
	<version>@@VERSION@@</version>  
	<description>PLG_CONTENT_MEDIA_XML_DESCRIPTION</description>
	<files>
		<filename plugin="media">media.php</filename>
		<filename>index.html</filename>
	</files>
	<languages>
		<language tag="en-GB">language/en-GB.plg_content_media.ini</language>
		<language tag="en-GB">language/en-GB.plg_content_media.sys.ini</language>
	</languages>
	<config>
		<fields 
                        name="params"
                        addfieldpath="/administrator/components/com_hwdmediashare/models/fields/"
                        addrulepath="/administrator/components/com_hwdmediashare/models/rules"     
                >
			<fieldset 
                                name="basic"
			>
                                <field
					name="layout"
					type="list"
					label="PLG_CONTENT_MEDIA_FIELD_LAYOUT_LABEL"
					description="PLG_CONTENT_MEDIA_FIELD_LAYOUT_DESC"                                        
					default="blog"
                                >
					<option value="blog">PLG_CONTENT_MEDIA_OPTION_BLOG</option>
					<option value="documentation">PLG_CONTENT_MEDIA_OPTION_DOCUMENTATION</option>
					<option value="barebones">PLG_CONTENT_MEDIA_OPTION_BAREBONES</option>
				</field>                             
			</fieldset>
		</fields>
	</config>
</extension>
