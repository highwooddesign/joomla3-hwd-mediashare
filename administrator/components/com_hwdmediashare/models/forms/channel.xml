<?xml version="1.0" encoding="utf-8"?>
<form
	addrulepath="/administrator/components/com_hwdmediashare/models/rules"
>
	<fieldset
                name="details"
                label="COM_HWDMS_DETAILS"
        >
		<field
			name="id"
			type="hidden"
		/>
                <field
			name="key"
                        readonly="true"                        
			type="hidden"
		/>
                <field 
                        name="asset_id" 
                        type="hidden" 
                        filter="unset" 
                />
                <field
			name="title"
			type="text"
			label="COM_HWDMS_TITLE_LABEL"
			description="COM_HWDMS_TITLE_DESC"
			class="input-xxlarge input-large-text"
			required="true"
		/>
                <field
			name="alias"
			type="text"
			label="COM_HWDMS_ALIAS_LABEL"
			description="COM_HWDMS_ALIAS_DESC"
		/>
		<field 
                        name="description" 
                        type="hwdeditor" 
			label="COM_HWDMS_DESCRIPTION_LABEL" 
                        description="COM_HWDMS_DESCRIPTION_DESC"
			filter="safehtml" 
                        buttons="true"
                />
                <field
			name="tags"
			type="tag"
			label="COM_HWDMS_TAGS_LABEL"
			description="COM_HWDMS_TAGS_DESC"
                        multiple="true"
		/>                
		<field 
                        name="featured" 
                        type="radio"
			label="JFEATURED"
			description="COM_HWDMS_FEATURED_DESC"
			class="btn-group btn-group-yesno"
			default="0"
                        validate="integer"
                        filter="integer"
		>
			<option value="0">JNO</option>
			<option value="1">JYES</option>
		</field> 
		<field 
                        name="status" 
                        type="list"
			label="JSTATUS"
			description="COM_HWDMS_STATUS_DESC"
			default="1"
                        validate="integer"
                        filter="integer"
		>
			<option value="0">COM_HWDMS_UNAPPROVED</option>
			<option value="1">COM_HWDMS_APPROVED</option>
			<option value="2">COM_HWDMS_PENDING</option>
			<option value="3">COM_HWDMS_REPORTED</option>
		</field>
		<field 
                        name="published" 
                        type="list" 
                        label="JPUBLISHED"
			description="JFIELD_PUBLISHED_DESC"
                        class="chzn-color-state"                        
			default="1"
		>
			<option value="1">JPUBLISHED</option>
			<option value="0">JUNPUBLISHED</option>
			<option value="2">JARCHIVED</option>
			<option value="-2">JTRASHED</option>
		</field>
		<field 
                        name="access" 
                        type="accesslevel" 
                        label="JFIELD_ACCESS_LABEL"
			description="JFIELD_ACCESS_DESC" 
			default="1"
                        validate="integer"
                        filter="integer"
                />
                <field
			name="private"
                        type="list" 
			label="COM_HWDMS_PRIVATE_LABEL"
			description="COM_HWDMS_PRIVATE_DESC"
			default="0"
                        validate="integer"
                        filter="integer"
		>
			<option value="1">COM_HWDMS_OPTION_UNLISTED</option>
			<option value="0">COM_HWDMS_OPTION_LISTED</option>
		</field> 
                <field
			name="hits"
			type="text"
			label="COM_HWDMS_HITS_LABEL"
			description="COM_HWDMS_HITS_DESC"
			default="0"
                        validate="integer"
                        filter="integer"
		/>
                <field
			name="likes"
			type="text"
			label="COM_HWDMS_LIKES_LABEL"
			description="COM_HWDMS_LIKES_DESC"
			default="0"
                        validate="integer"
                        filter="integer"
		/>
                <field
			name="dislikes"
			type="text"
			label="COM_HWDMS_DISLIKES_LABEL"
			description="COM_HWDMS_DISLIKES_DESC"
			default="0"
                        validate="integer"
                        filter="integer"
		/>
		<field 
                        name="language" 
                        type="contentlanguage" 
                        label="JFIELD_LANGUAGE_LABEL"
			description="COM_HWDMS_LANGUAGE_DESC" 
		>
			<option value="*">JALL</option>
		</field>
	</fieldset>
	<fieldset
                name="thumbnail"
                label="COM_HWDMS_THUMBNAIL"
        >
 		<field
                        name="thumbnail"
                        type="file"
			label="COM_HWDMS_NEW_CHANNEL_ART_LABEL"
                        description="COM_HWDMS_NEW_CHANNEL_ART_DESC"
                />
 		<field
                        name="remove_thumbnail"
                        type="checkbox"
                        value="1"
			label="COM_HWDMS_REMOVE_CURRENT_CHANNEL_ART_LABEL"
                        description="COM_HWDMS_REMOVE_CURRENT_CHANNEL_ART_DESC"
                />
        </fieldset>
        <fieldset
                name="publishing"
                label="COM_HWDMS_PUBLISHING"
        >
 		<field 
                        name="created_user_id" 
                        type="hidden"
                />
                <field 
                        name="created" 
                        type="calendar" 
                        label="COM_HWDMS_CREATED_LABEL"
			description="COM_HWDMS_CREATED_DESC" 
			format="%Y-%m-%d %H:%M:%S" 
                        filter="user_utc"
                />
		<field 
                        name="publish_up" 
                        type="calendar"
			label="COM_HWDMS_PUBLISH_UP_LABEL" 
                        description="COM_HWDMS_PUBLISH_UP_DESC"
                        format="%Y-%m-%d %H:%M:%S" 
			filter="user_utc" 
                />
		<field 
                        name="publish_down" 
                        type="calendar"
			label="COM_HWDMS_PUBLISH_DOWN_LABEL" 
                        description="COM_HWDMS_PUBLISH_DOWN_DESC"
                        format="%Y-%m-%d %H:%M:%S" 
			filter="user_utc" 
                />
		<field 
                        name="modified" 
                        type="calendar" 
			label="JGLOBAL_FIELD_MODIFIED_LABEL" 
                        description="COM_HWDMS_MODIFIED_DESC"
                        readonly="true" 
                        format="%Y-%m-%d %H:%M:%S" 
                        filter="user_utc"
                />
		<field 
                        name="modified_user_id" 
                        type="user"
                        label="JGLOBAL_FIELD_MODIFIED_BY_LABEL"
                        readonly="true"
                        filter="unset" 
                />
       </fieldset>
       <fields name="params">
                <fieldset
                        name="metadata"
                        label="COM_HWDMS_METADATA"
                >
                        <field
                                name="meta_desc"
                                type="textarea"
                                label="COM_HWDMS_METADESC_LABEL"
                                description="COM_HWDMS_METADESC_DESC"
                                filter="string"
                                cols="55"
                                rows="3" 
                        />
                        <field
                                name="meta_keys"
                                type="textarea"
                                label="COM_HWDMS_METAKEYS_LABEL"
                                description="COM_HWDMS_METAKEYS_DESC"
                                filter="string"
                                cols="55"
                                rows="3"
                        />
                        <field
                                name="meta_rights"
                                type="textarea"
                                label="COM_HWDMS_META_RIGHTS_LABEL"
                                description="COM_HWDMS_META_RIGHTS_DESC"
                                filter="string"
                                cols="55"
                                rows="2" 
                        />
                        <field
                                name="meta_author"
                                type="radio"
                                label="COM_HWDMS_METAAUTHOR_LABEL"
                                description="COM_HWDMS_METAAUTHOR_DESC"
                                class="btn-group btn-group-yesno"
                                default="1"
                                validate="integer"
                                filter="integer"
                        >
                                <option value="1">JYES</option>
                                <option value="0">JNO</option>
                        </field>
                </fieldset>
	</fields>
	<fieldset
                name="permissions"
                label="COM_HWDMS_PERMISSIONS"
        >
		<field
                        name="rules"
                        type="rules"
                        label="JFIELD_RULES_LABEL"
			translate_label="false"
                        filter="rules"
			component="com_hwdmediashare"
                        section="channel"
                        validate="rules"
		/>
       </fieldset> 
</form>
