<?xml version="1.0" encoding="utf-8"?>
<form
	addrulepath="/administrator/components/com_hwdmediashare/models/rules"
>
	<fieldset
                name="details"
                label="COM_HWDMS_DETAILS"
        >
		<field
			name="id"
			type="hidden"
		/>
		<field
			name="ext"
			type="text"
			label="COM_HWDMS_FILE_EXTENSION_LABEL"
			description="COM_HWDMS_FILE_EXTENSION_DESC"
			class="inputbox input-xxlarge input-large-text"
  			required="true"
                        filter="extension"
                        validate="extension"
		/>
                <field
                        name="media_type"
                        type="mediatype"
                        label="COM_HWDMS_MEDIA_LABEL"
                        description="COM_HWDMS_MEDIA_DESC"
                        required="true"
                        validate="integer"
                        filter="integer"
                />
		<field 
                        name="published" 
                        type="list" 
                        label="JPUBLISHED"
			description="JFIELD_PUBLISHED_DESC" 
			default="1"
		>
			<option value="1">JPUBLISHED</option>
			<option value="0">JUNPUBLISHED</option>
			<option value="2">JARCHIVED</option>
			<option value="-2">JTRASHED</option>
		</field>
		<field 
                        name="access" 
                        type="accesslevel" 
                        label="JFIELD_ACCESS_LABEL"
			description="JFIELD_ACCESS_DESC" 
			default="1"
                        validate="integer"
                        filter="integer"
                />
	</fieldset>
	<fieldset
                name="publishing"
                label="COM_HWDMS_PUBLISHING"
        >
 		<field 
                        name="created_user_id" 
                        type="user"
			label="COM_HWDMS_CREATED_BY_LABEL" 
                        description="COM_HWDMS_CREATED_BY_DESC" 
                />
                <field 
                        name="created" 
                        type="calendar" 
                        label="COM_HWDMS_CREATED_LABEL"
			description="COM_HWDMS_CREATED_DESC" 
			format="%Y-%m-%d %H:%M:%S" 
                        filter="user_utc"
                />
		<field 
                        name="publish_up" 
                        type="calendar"
			label="COM_HWDMS_PUBLISH_UP_LABEL" 
                        description="COM_HWDMS_PUBLISH_UP_DESC"
                        format="%Y-%m-%d %H:%M:%S" 
			filter="user_utc" 
                />
		<field 
                        name="publish_down" 
                        type="calendar"
			label="COM_HWDMS_PUBLISH_DOWN_LABEL" 
                        description="COM_HWDMS_PUBLISH_DOWN_DESC"
                        format="%Y-%m-%d %H:%M:%S" 
			filter="user_utc" 
                />
		<field 
                        name="modified" 
                        type="calendar" 
			label="JGLOBAL_FIELD_MODIFIED_LABEL" 
                        description="COM_HWDMS_MODIFIED_DESC"
                        readonly="true" 
                        format="%Y-%m-%d %H:%M:%S" 
                        filter="user_utc"
                />
		<field 
                        name="modified_user_id" 
                        type="user"
                        label="JGLOBAL_FIELD_MODIFIED_BY_LABEL"
                        readonly="true"
                        filter="unset" 
                />
       </fieldset>
</form>
