                        name="assign_group_id"
                        type="group"
			label="COM_HWDMS_GROUP_LABEL"
                        description="COM_HWDMS_GROUP_DESC"
                />
 		<field
                        name="unassign_group_id"
                        type="group"
			label="COM_HWDMS_GROUP_LABEL"
                        description="COM_HWDMS_GROUP_DESC"
                />
                <field
                        name="assign_process_type"
                        type="process"
			label="COM_HWDMS_PROCESS_LABEL"
                        description="COM_HWDMS_PROCESS_DESC"
                />
