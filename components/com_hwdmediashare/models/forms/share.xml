			name="sender"
			type="text"
			label="COM_HWDMS_SENDER_LABEL"
			description="COM_HWDMS_SENDER_DESC"
			size="20"
			class="inputbox"
			default=""
		/>
                <field
			name="from"
			type="text"
			label="COM_HWDMS_YOUR_EMAIL_LABEL"
			description="COM_HWDMS_YOUR_EMAIL_DESC"
			size="20"
			class="inputbox"
			default=""
		/>
                <field
			name="subject"
			type="text"
			label="COM_HWDMS_SUBJECT_LABEL"
			description="COM_HWDMS_SUBJECT_DESC"
			size="20"
			class="inputbox"
			default=""
