                name="details"
                label="COM_HWDMS_DETAILS"
                addfieldpath="/components/com_hwdmediashare/models/fields/"
        >
                <field
			name="permalink"
			type="text"
			label="COM_HWDMS_PERMALINK_LABEL"
			description="COM_HWDMS_PERMALINK_DESC"
			size="40"
			class="inputbox"
			default=""
		/>
                <field
			name="embed_code"
			type="textarea"
			label="COM_HWDMS_EMBED_CODE_LABEL"
			description="COM_HWDMS_EMBED_CODE_DESC"
                        rows="3" 
                        cols="30"
			class="inputbox"
			default=""
