	addrulepath="/administrator/components/com_hwdmediashare/models/rules"
>
	<fieldset
                name="remote"
                label="COM_HWDMS_DETAILS"
        >
		<field 
                        name="remote" 
                        type="textarea" 
                        class="inputbox"
			label="COM_HWDMS_REMOTE_LINK_LABEL" 
                        description="COM_HWDMS_REMOTE_LINK_DESC"
                />
        </fieldset>
        <fieldset
                name="details"
                label="COM_HWDMS_DETAILS"
        >
                <field
                        name="catid"
                        type="category"
                        extension="com_hwdmediashare"
                        class="inputbox"
                        default=""
                        label="COM_HWDMS_CATEGORY_LABEL"
                        description="COM_HWDMS_CATEGORY_DESC"
