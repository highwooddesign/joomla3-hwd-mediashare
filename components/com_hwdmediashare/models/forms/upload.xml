                />
 		<field
                        name="playlist_id"
                        type="playlist"
			label="COM_HWDMS_PLAYLIST_LABEL"
                        description="COM_HWDMS_PLAYLIST_DESC"

 		/>
                <field
                        name="group_id"
                        type="group"
			label="COM_HWDMS_GROUP_LABEL"
                        description="COM_HWDMS_GROUP_DESC"
                />
        </fieldset>
