<?xml version="1.0" encoding="utf-8"?>
<extension type="module" version="3.0" client="site" method="upgrade">
	<name>mod_hwd_cnn_videobox</name>
	<author>HWD</author>
	<creationDate>@@CREATIONDATE@@</creationDate>
	<copyright>(C) 2014 Highwood Design Limited</copyright>
	<license>GNU/GPL http://www.gnu.org/copyleft/gpl.html</license>
	<authorEmail>info@hwdmediashare.co.uk</authorEmail>
	<authorUrl>http://hwdmediashare.co.uk</authorUrl>
	<version>@@VERSION@@</version>  
	<description>MOD_HWD_CNN_VIDEOBOX_XML_DESCRIPTION</description>
	<files>
		<filename module="mod_hwd_cnn_videobox">mod_hwd_cnn_videobox.php</filename>
		<filename module="mod_hwd_cnn_videobox">helper.php</filename>
		<filename module="mod_hwd_cnn_videobox">index.html</filename>		
		<folder>css</folder>
		<folder>images</folder>
		<folder>js</folder>
		<folder>tmpl</folder>
	</files>
	<languages>
		<language tag="en-GB">language/en-GB.mod_hwd_cnn_videobox.ini</language>
		<language tag="en-GB">language/en-GB.mod_hwd_cnn_videobox.sys.ini</language>
	</languages>
	<config>
		<fields name="params">
			<fieldset 
                                name="basic"
			>
				<field 
                                        name="layout" 
                                        type="modulelayout"
					label="MOD_HWD_FIELD_LAYOUT_LABEL" 
                                        description="MOD_HWD_FIELD_LAYOUT_DESC" 
                                        default="_:default"
                                />  
				<field 
                                        name="columns" 
                                        type="list" 
					label="MOD_HWD_FIELD_MAXCOLS_LABEL"
					description="MOD_HWD_FIELD_MAXCOLS_DESC"
                                        default="3"
				>
					<option value="1">J1</option>
					<option value="2">J2</option>
					<option value="3">J3</option>
					<option value="4">J4</option>
					<option value="5">J5</option>
					<option value="6">J6</option>
				</field>                                
				<field 
                                        name="count" 
                                        type="text" 
					label="MOD_HWD_FIELD_COUNT_LABEL"
					description="MOD_HWD_FIELD_COUNT_DESC" 
                                        default="5"
                                />
				<field 
                                        name="icon" 
                                        type="radio"
					label="MOD_HWD_FIELD_ICON_LABEL"
					description="MOD_HWD_FIELD_ICON_DESC"
                                        default="1"
                                        class="btn-group btn-group-yesno"
				>
					<option value="1">JSHOW</option>
					<option value="0">JHIDE</option>
				</field>                                                             
			</fieldset>			            
			<fieldset name="advanced">
				<field
					name="moduleclass_sfx"
					type="textarea" 
					label="COM_MODULES_FIELD_MODULECLASS_SFX_LABEL"
					description="COM_MODULES_FIELD_MODULECLASS_SFX_DESC"                                        
                                        rows="3"
                                />
				<field
					name="cache"
					type="radio"
					label="COM_MODULES_FIELD_CACHING_LABEL"
					description="COM_MODULES_FIELD_CACHING_DESC"
                                        class="btn-group btn-group-yesno"
                                        default="1"
				>
					<option value="1">JGLOBAL_USE_GLOBAL</option>
					<option value="0">COM_MODULES_FIELD_VALUE_NOCACHING</option>
				</field>
				<field
					name="cache_time"
					type="text"
					label="COM_MODULES_FIELD_CACHE_TIME_LABEL"
					description="COM_MODULES_FIELD_CACHE_TIME_DESC"
					default="900"
                                />
			</fieldset>
		</fields>
	</config>
</extension>
