<?xml version="1.0" encoding="utf-8"?>
<extension type="module" version="3.0" client="site" method="upgrade">
	<name>mod_media_item</name>
	<author>HWD</author>
	<creationDate>@@CREATIONDATE@@</creationDate>
	<copyright>(C) 2014 Highwood Design Limited</copyright>
	<license>GNU/GPL http://www.gnu.org/copyleft/gpl.html</license>
	<authorEmail>info@hwdmediashare.co.uk</authorEmail>
	<authorUrl>http://hwdmediashare.co.uk</authorUrl>
	<version>@@VERSION@@</version>  
	<description>MOD_MEDIA_ITEM_XML_DESCRIPTION</description>
	<files>
		<filename module="mod_media_item">mod_media_item.php</filename>
		<folder>tmpl</folder>
		<filename>helper.php</filename>
		<filename>index.html</filename>		
	</files>
	<languages>
		<language tag="en-GB">language/en-GB.mod_media_item.ini</language>
		<language tag="en-GB">language/en-GB.mod_media_item.sys.ini</language>
	</languages>
	<config>
		<fields 
                        name="params"
                        addfieldpath="/administrator/components/com_hwdmediashare/models/fields/"
                        addrulepath="/administrator/components/com_hwdmediashare/models/rules"     
                >
                        <fieldset 
                                name="basic"
                        >
				<field 
                                        name="display" 
                                        type="mediafullordering"
                                        label="MOD_MEDIA_FIELD_DISPLAY_LABEL"
                                        description="MOD_MEDIA_FIELD_DISPLAY_DESC"
					default="selected"
				>                      
                                        <option value="selected">MOD_MEDIA_OPTION_SELECTED_MEDIA_VALUE</option>
				</field>                                 
                                <field 
                                        name="media_id" 
                                        type="mediaitem" 
                                        default="show"
					label="MOD_MEDIA_FIELD_MEDIAID_LABEL"
					description="MOD_MEDIA_FIELD_MEDIAID_DESC"
				/>                                                                                               
			</fieldset>
			<fieldset 
                                name="filtering"
				label="MOD_MEDIA_FIELD_GROUP_FILTERING_LABEL"
			>
				<field 
                                        name="show_featured" 
                                        type="list" 
					label="MOD_MEDIA_FIELD_SHOWFEATURED_LABEL"
					description="MOD_MEDIA_FIELD_SHOWFEATURED_DESC"
                                        default="show"
				>
					<option value="show">JSHOW</option>
					<option value="hide">JHIDE</option>
					<option value="only">MOD_MEDIA_OPTION_ONLYFEATURED_VALUE</option>
				</field>
                                <field
                                        name="list_default_media_type"
                                        type="list"
                                        label="MOD_MEDIA_FIELD_MEDIA_TYPE_LABEL"
                                        description="MOD_MEDIA_FIELD_MEDIA_TYPE_DESC"
                                        default=""                                       
                                >
                                        <option value="">MOD_MEDIA_OPTION_ANY_VALUE</option>
                                        <option value="1">MOD_MEDIA_OPTION_AUDIO_VALUE</option>
                                        <option value="2">MOD_MEDIA_OPTION_DOCUMENT_VALUE</option>
                                        <option value="3">MOD_MEDIA_OPTION_IMAGE_VALUE</option>
                                        <option value="4">MOD_MEDIA_OPTION_VIDEO_VALUE</option>
                                </field>  
				<field 
                                        name="show_featured" 
                                        type="list" 
                                        default="show"
					label="MOD_MEDIA_FIELD_SHOWFEATURED_LABEL"
					description="MOD_MEDIA_FIELD_SHOWFEATURED_DESC"
				>
					<option value="show">JSHOW</option>
					<option value="hide">JHIDE</option>
					<option value="only">MOD_MEDIA_OPTION_ONLYFEATURED_VALUE</option>
				</field>
				<field name="spacer_categoryfiltering" label="MOD_MEDIA_SPACER_CATEGORYFILTERING" type="spacer" hr="true" />
				<field 
                                        name="category_filtering_type" 
                                        type="radio"
					label="MOD_MEDIA_FIELD_CATFILTERINGTYPE_LABEL"
					description="MOD_MEDIA_FIELD_CATFILTERINGTYPE_DESC"
                                        class="btn-group btn-group-yesno"
					default="1"
                                        validate="integer"
                                        filter="integer"    
				>
					<option value="1">MOD_MEDIA_OPTION_INCLUSIVE_VALUE</option>
					<option value="0">MOD_MEDIA_OPTION_EXCLUSIVE_VALUE</option>
				</field>
				<field 
                                        name="catid" 
                                        type="category" 
                                        extension="com_hwdmediashare"
					multiple="true" 
                                        size="5"
					label="JCATEGORY"
					description="MOD_MEDIA_FIELD_CATEGORY_DESC"
				>
					<option value="">JOPTION_ALL_CATEGORIES</option>
				</field>
				<field 
                                        name="show_child_category_articles" 
                                        type="radio"
					label="MOD_MEDIA_FIELD_SHOWCHILDCATEGORYITEMS_LABEL"
					description="MOD_MEDIA_FIELD_SHOWCHILDCATEGORYITEMS_DESC"
                                        class="btn-group btn-group-yesno"
					default="0"
                                        validate="integer"
                                        filter="integer"    
				>
					<option value="1">MOD_MEDIA_OPTION_INCLUDE_VALUE</option>
					<option value="0">MOD_MEDIA_OPTION_EXCLUDE_VALUE</option>
				</field>
				<field 
                                        name="levels" 
                                        type="text"
					label="MOD_MEDIA_FIELD_CATDEPTH_LABEL"
					description="MOD_MEDIA_FIELD_CATDEPTH_DESC"
                                        class="btn-group btn-group-yesno"
					default="1"
                                        validate="integer"
                                        filter="integer"    
                                />
				<field name="spacer_authorfiltering" label="MOD_MEDIA_SPACER_AUTHORFILTERING" type="spacer" hr="true" />
				<field 
                                        name="author_filtering_type" 
                                        type="radio"
					label="MOD_MEDIA_FIELD_AUTHORFILTERING_LABEL"
					description="MOD_MEDIA_FIELD_AUTHORFILTERING_DESC"
                                        class="btn-group btn-group-yesno"
					default="1"
				>
					<option value="1">MOD_MEDIA_OPTION_INCLUSIVE_VALUE</option>
					<option value="0">MOD_MEDIA_OPTION_EXCLUSIVE_VALUE</option>
				</field>
				<field 
                                        name="created_by" 
                                        type="sql"
					multiple="true" 
                                        size="5"
					label="MOD_MEDIA_FIELD_AUTHOR_LABEL"
					description="MOD_MEDIA_FIELD_AUTHOR_DESC"
					query="select id, name, username from #__users where id IN (select distinct(created_user_id) from #__hwdms_albums) order by name ASC"
					key_field="id" 
                                        value_field="name"
				>
					<option value="">JOPTION_SELECT_AUTHORS</option>
				</field>
			</fieldset>
			<fieldset 
                                name="display"
				label="MOD_MEDIA_FIELD_GROUP_DISPLAY_LABEL"
			>
                                <field
                                        name="mediaitem_size"
                                        type="text"
                                        label="MOD_MEDIA_FIELD_MAXIMUM_MEDIA_SIZE_LABEL"
                                        description="MOD_MEDIA_FIELD_MAXIMUM_MEDIA_SIZE_DESC"
                                        class="inputbox"
                                        default="500"
                                        filter="integer"
                                />
                                <field
                                        name="media_autoplay"
                                        type="radio"
                                        label="MOD_MEDIA_FIELD_MEDIA_AUTOPLAY_LABEL"
                                        description="MOD_MEDIA_FIELD_MEDIA_AUTOPLAY_DESC"
                                        class="btn-group btn-group-yesno"
                                        default=""                                        
                                >
                                        <option value="1">JYES</option>
                                        <option value="0">JNO</option>
                                        <option value="">JGLOBAL_USE_GLOBAL</option>
                                </field> 
                                <field
                                        name="item_meta_title"
                                        type="radio"
                                        label="MOD_MEDIA_FIELD_SHOW_TITLE_LABEL"
                                        description="MOD_MEDIA_FIELD_SHOW_TITLE_DESC"
                                        class="btn-group btn-group-yesno"
                                        default=""
                                >
                                        <option value="1">JYES</option>
                                        <option value="0">JNO</option>
                                        <option value="">JGLOBAL_USE_GLOBAL</option>
                                </field>
                                <field 
                                        name="item_meta_heading" 
                                        type="list" 
                                        label="COM_HWDMS_HEADING_LEVEL_LABEL"
                                        description="COM_HWDMS_HEADING_LEVEL_DESC"
                                        default=""
                                >
                                        <option value="">JGLOBAL_USE_GLOBAL</option>
                                        <option value="1">JH1</option>
                                        <option value="2">JH2</option>
                                        <option value="3">JH3</option>
                                        <option value="4">JH4</option>
                                        <option value="5">JH5</option>
                                        <option value="6">JH6</option>
                                </field> 
			</fieldset>
			<fieldset name="advanced">
				<field 
                                        name="layout" 
                                        type="modulelayout"
					label="JFIELD_ALT_LAYOUT_LABEL" 
                                        description="JFIELD_ALT_MODULE_LAYOUT_DESC" 
                                        default="_:default"                                        
                                />
				<field 
                                        name="moduleclass_sfx" 
                                        type="text"
					label="COM_MODULES_FIELD_MODULECLASS_SFX_LABEL"
					description="COM_MODULES_FIELD_MODULECLASS_SFX_DESC" 
                                />
				<field 
                                        name="owncache" 
                                        type="list" 
                                        default="1"
					label="COM_MODULES_FIELD_CACHING_LABEL" 
                                        description="COM_MODULES_FIELD_CACHING_DESC" 
                                >
					<option value="1">JGLOBAL_USE_GLOBAL</option>
					<option value="0">COM_MODULES_FIELD_VALUE_NOCACHING</option>
				</field>
				<field 
                                        name="cache_time" 
                                        type="text" 
                                        default="900"
					label="COM_MODULES_FIELD_CACHE_TIME_LABEL" 
                                        description="COM_MODULES_FIELD_CACHE_TIME_DESC"
                                />
			</fieldset>
		</fields>
	</config>
</extension>
