<?xml version="1.0" encoding="utf-8"?>
<extension version="2.5" type="module" client="site" method="upgrade">
	<name>mod_media_images</name>
	<creationDate>2013-10-24</creationDate>
	<author>Highwood Design</author>
	<authorEmail>info@hwdmediashare.co.uk</authorEmail>
	<authorUrl>http://hwdmediashare.co.uk</authorUrl>
	<copyright>(C) 2011 - 2013 Highwood Design Limited</copyright>
	<license>GNU/GPL http://www.gnu.org/copyleft/gpl.html</license>
	<version>1.1.12</version>
	<description>MOD_MEDIA_IMAGES_XML_DESCRIPTION</description>
	<files>
		<filename module="mod_media_images">mod_media_images.php</filename>
		<filename module="mod_media_images">helper.php</filename>
		<folder>css</folder>
		<folder>images</folder>
		<folder>js</folder>
		<folder>language</folder>
		<folder>tmpl</folder>
		<filename>index.html</filename>		
		<filename>mod_media_images.xml</filename>
	</files>
	<languages>
		<language tag="en-GB">language/en-GB/en-GB.mod_media_images.ini</language>
		<language tag="en-GB">language/en-GB/en-GB.mod_media_images.sys.ini</language>
	</languages>
	<config>
		<fields name="params">
			<fieldset 
                                name="filtering"
				label="MOD_MEDIA_FIELD_GROUP_FILTERING_LABEL"
			>
				<field 
                                        name="show_featured" 
                                        type="radio" 
                                        default="show"
					label="MOD_MEDIA_FIELD_SHOWFEATURED_LABEL"
					description="MOD_MEDIA_FIELD_SHOWFEATURED_DESC"
				>
					<option value="show">JSHOW</option>
					<option value="hide">JHIDE</option>
					<option value="only">MOD_MEDIA_OPTION_ONLYFEATURED_VALUE</option>
				</field>
				<field 
                                        name="count" 
                                        type="text" 
                                        default="5"
					label="MOD_MEDIA_FIELD_COUNT_LABEL"
					description="MOD_MEDIA_FIELD_COUNT_DESC" 
                                />
				<field name="filteringspacer1" type="spacer" hr="true" />
				<field 
                                        name="category_filtering_type" 
                                        type="radio"
					default="1"
					label="MOD_MEDIA_FIELD_CATFILTERINGTYPE_LABEL"
					description="MOD_MEDIA_FIELD_CATFILTERINGTYPE_DESC"
				>
					<option value="1">MOD_MEDIA_OPTION_INCLUSIVE_VALUE</option>
					<option value="0">MOD_MEDIA_OPTION_EXCLUSIVE_VALUE</option>
				</field>
				<field 
                                        name="catid" 
                                        type="category" 
                                        extension="com_hwdmediashare"
					multiple="true" 
                                        size="5"
					label="JCATEGORY"
					description="MOD_MEDIA_FIELD_CATEGORY_DESC"
				>
					<option value="">JOPTION_ALL_CATEGORIES</option>
				</field>
				<field 
                                        name="show_child_category_articles" 
                                        type="radio"
					default="0"
					label="MOD_MEDIA_FIELD_SHOWCHILDCATEGORYITEMS_LABEL"
					description="MOD_MEDIA_FIELD_SHOWCHILDCATEGORYITEMS_DESC"
				>
					<option value="1">MOD_MEDIA_OPTION_INCLUDE_VALUE</option>
					<option value="0">MOD_MEDIA_OPTION_EXCLUDE_VALUE</option>
				</field>
				<field 
                                        name="levels" 
                                        type="text"
                                        default="1"
					label="MOD_MEDIA_FIELD_CATDEPTH_LABEL"
					description="MOD_MEDIA_FIELD_CATDEPTH_DESC"
                                />
 				<field name="filteringspacer2" type="spacer" hr="true" />
				<field 
                                        name="author_filtering_type" 
                                        type="radio"
					default="1"
					label="MOD_MEDIA_FIELD_AUTHORFILTERING_LABEL"
					description="MOD_MEDIA_FIELD_AUTHORFILTERING_DESC"
				>
					<option value="1">MOD_MEDIA_OPTION_INCLUSIVE_VALUE</option>
					<option value="0">MOD_MEDIA_OPTION_EXCLUSIVE_VALUE</option>
				</field>
				<field 
                                        name="created_by" 
                                        type="sql"
					multiple="true" 
                                        size="5"
					label="MOD_MEDIA_FIELD_AUTHOR_LABEL"
					description="MOD_MEDIA_FIELD_AUTHOR_DESC"
					query="select id, name, username from #__users where id IN (select distinct(created_user_id) from #__hwdms_media) order by name ASC"
					key_field="id" 
                                        value_field="name"
				>
					<option value="">JOPTION_SELECT_AUTHORS</option>
				</field>
				<field name="filteringspacer3" type="spacer" hr="true" />
				<field 
                                        name="author_alias_filtering_type" 
                                        type="radio"
					default="1"
					label="MOD_MEDIA_FIELD_AUTHORALIASFILTERING_LABEL"
					description="MOD_MEDIA_FIELD_AUTHORALIASFILTERING_DESC"
				>
					<option value="1">MOD_MEDIA_OPTION_INCLUSIVE_VALUE</option>
					<option value="0">MOD_MEDIA_OPTION_EXCLUSIVE_VALUE</option>
				</field>

				<field 
                                        name="created_by_alias" 
                                        type="sql"
					multiple="true" 
                                        size="5"
					label="MOD_MEDIA_FIELD_AUTHORALIAS_LABEL"
					description="MOD_MEDIA_FIELD_AUTHORALIAS_DESC"
					query="select distinct(created_user_id_alias) from #__hwdms_media where created_user_id_alias != '' order by created_user_id_alias ASC"
					key_field="created_user_id_alias" 
                                        value_field="created_user_id_alias"
				>
					<option value="">JOPTION_SELECT_AUTHOR_ALIASES</option>
				</field>
				<field name="filteringspacer4" type="spacer" hr="true" />
				<field 
                                        name="excluded_items" 
                                        type="textarea"
					cols="10" 
                                        rows="3"
					label="MOD_MEDIA_FIELD_EXCLUDEDITEMS_LABEL"
					description="MOD_MEDIA_FIELD_EXCLUDEDITEMS_DESC" 
                                />
				<field name="filteringspacer5" type="spacer" hr="true" />
				<field 
                                        name="date_filtering" 
                                        type="radio" 
                                        default="off"
					label="MOD_MEDIA_FIELD_DATEFILTERING_LABEL"
					description="MOD_MEDIA_FIELD_DATEFILTERING_DESC"
				>
					<option value="off">MOD_MEDIA_OPTION_OFF_VALUE</option>
					<option value="range">MOD_MEDIA_OPTION_DATERANGE_VALUE</option>
					<option value="relative">MOD_MEDIA_OPTION_RELATIVEDAY_VALUE</option>
				</field>
				<field 
                                        name="date_field" 
                                        type="list" 
                                        default="a.created"
					label="MOD_MEDIA_FIELD_DATERANGEFIELD_LABEL"
					description="MOD_MEDIA_FIELD_DATERANGEFIELD_DESC"
				>
					<option value="a.created">MOD_MEDIA_OPTION_CREATED_VALUE</option>
					<option value="a.modified">MOD_MEDIA_OPTION_MODIFIED_VALUE</option>
					<option value="a.publish_up">MOD_MEDIA_OPTION_STARTPUBLISHING_VALUE</option>
				</field>
				<field 
                                        name="start_date_range" 
                                        type="calendar"
					format="%Y-%m-%d %H:%M:%S"
					label="MOD_MEDIA_FIELD_STARTDATE_LABEL"
					description="MOD_MEDIA_FIELD_STARTDATE_DESC"
					size="22"
					filter="user_utc" 
                                />
				<field 
                                        name="end_date_range" 
                                        type="calendar"
					format="%Y-%m-%d %H:%M:%S"
					label="MOD_MEDIA_FIELD_ENDDATE_LABEL"
					description="MOD_MEDIA_FIELD_ENDDATE_DESC"
					size="22"
					filter="user_utc" 
                                />
				<field 
                                        name="relative_date" 
                                        type="text" 
                                        default="30"
					label="MOD_MEDIA_FIELD_RELATIVEDATE_LABEL"
					description="MOD_MEDIA_FIELD_RELATIVEDATE_DESC" 
                                />
			</fieldset>
			<fieldset 
                                name="ordering"
				label="MOD_MEDIA_FIELD_GROUP_ORDERING_LABEL"
			>
				<field 
                                        name="ordering" 
                                        type="list"
					default="a.title"
					label="MOD_MEDIA_FIELD_ITEMORDERING_LABEL"
					description="MOD_MEDIA_FIELD_ITEMORDERING_DESC"
				>
					<option value="a.ordering">MOD_MEDIA_OPTION_ORDERING_VALUE</option>
					<option value="a.hits">MOD_MEDIA_OPTION_HITS_VALUE</option>
					<option value="a.title">JGLOBAL_TITLE</option>
					<option value="a.id">MOD_MEDIA_OPTION_ID_VALUE</option>
					<option value="a.alias">JFIELD_ALIAS_LABEL</option>
					<option value="a.created">MOD_MEDIA_OPTION_CREATED_VALUE</option>
					<option value="a.modified">MOD_MEDIA_OPTION_MODIFIED_VALUE</option>
					<option value="a.publish_up">MOD_MEDIA_OPTION_STARTPUBLISHING_VALUE</option>
					<option value="a.publish_down">MOD_MEDIA_OPTION_FINISHPUBLISHING_VALUE</option>
				</field>
				<field 
                                        name="ordering_direction" 
                                        type="list"
					default="ASC"
					label="MOD_MEDIA_FIELD_ITEMORDERINGDIR_LABEL"
					description="MOD_MEDIA_FIELD_ITEMORDERINGDIR_DESC"
				>
					<option value="DESC">MOD_MEDIA_OPTION_DESCENDING_VALUE</option>
					<option value="ASC">MOD_MEDIA_OPTION_ASCENDING_VALUE</option>
				</field>
			</fieldset>
			<fieldset 
                                name="display"
				label="MOD_MEDIA_FIELD_GROUP_DISPLAY_LABEL"
			>
				<field
					name="mediaitem_width"
					type="text"
					default="500"
					size="8"
					label="MOD_MEDIA_FIELD_MAXIMUM_MEDIA_WIDTH_LABEL"
					description="MOD_MEDIA_FIELD_MAXIMUM_MEDIA_WIDTH_DESC" 
                                />
				<field
					name="mediaitem_height"
					type="text"
					default="350"
					size="8"
					label="MOD_MEDIA_FIELD_MAXIMUM_MEDIA_HEIGHT_LABEL"
					description="MOD_MEDIA_FIELD_MAXIMUM_MEDIA_HEIGHT_DESC" 
                                />
				<field 
					name="bgc_top" 
					type="colorpicker" 
					default="45484d"
					id="picker_headerColorTop"
					previewid="preview_headerColorTop"
					label="MOD_MEDIA_FIELD_GRADIENT_TOP_LABEL"
					description="MOD_MEDIA_FIELD_GRADIENT_TOP_DESC" 
				/>
				<field 
					name="bgc_bottom" 
					type="colorpicker" 
					default="000000"
					id="picker_headerColorBottom"
					previewid="preview_headerColorBottom"
					label="MOD_MEDIA_FIELD_GRADIENT_BOTTOM_LABEL"
					description="MOD_MEDIA_FIELD_GRADIENT_BOTTOM_DESC" 
				/>
				<field
					name="auto_interval"
					type="list"
					default="0"
					label="MOD_MEDIA_FIELD_AUTOINTERVAL_LABEL"
					description="MOD_MEDIA_FIELD_AUTOINTERVAL_DESC"
				>
                                        <option value="0">JNO</option>
                                        <option value="1">MOD_MEDIA_OPTION_1SEC</option>
                                        <option value="2">MOD_MEDIA_OPTION_2SEC</option>
                                        <option value="3">MOD_MEDIA_OPTION_3SEC</option>
                                        <option value="4">MOD_MEDIA_OPTION_4SEC</option>
                                        <option value="5">MOD_MEDIA_OPTION_5SEC</option>
                                        <option value="6">MOD_MEDIA_OPTION_6SEC</option>
                                        <option value="7">MOD_MEDIA_OPTION_7SEC</option>
                                        <option value="8">MOD_MEDIA_OPTION_8SEC</option>
                                        <option value="9">MOD_MEDIA_OPTION_9SEC</option>
                                        <option value="10">MOD_MEDIA_OPTION_10SEC</option>
                                        <option value="11">MOD_MEDIA_OPTION_11SEC</option>
                                        <option value="12">MOD_MEDIA_OPTION_12SEC</option>
                                        <option value="13">MOD_MEDIA_OPTION_13SEC</option>
                                        <option value="14">MOD_MEDIA_OPTION_14SEC</option>
                                        <option value="15">MOD_MEDIA_OPTION_15SEC</option>
                                        <option value="16">MOD_MEDIA_OPTION_16SEC</option>
                                        <option value="17">MOD_MEDIA_OPTION_17SEC</option>
                                        <option value="18">MOD_MEDIA_OPTION_18SEC</option>
                                        <option value="19">MOD_MEDIA_OPTION_19SEC</option>
                                        <option value="20">MOD_MEDIA_OPTION_10SEC</option>
				</field>"
				<field
					name="show_more_link"
					type="menuitem"
					default="show"
					label="MOD_MEDIA_FIELD_SHOWMORELINK_LABEL"
					description="MOD_MEDIA_FIELD_SHOWMORELINK_DESC"
				>
                                        <option value="show">JSHOW</option>
                                        <option value="hide">JHIDE</option>
				</field>                                
                                <field 
                                        name="more_link_text" 
                                        type="text" 
                                        default=""
					label="MOD_MEDIA_FIELD_SHOWMORETEXT_LABEL"
					description="MOD_MEDIA_FIELD_SHOWMORETEXT_DESC"
                                />
			</fieldset>
			<fieldset name="advanced">
				<field 
                                        name="layout" 
                                        type="modulelayout"
					label="JFIELD_ALT_LAYOUT_LABEL" 
                                        description="JFIELD_ALT_MODULE_LAYOUT_DESC" 
                                />
				<field 
                                        name="moduleclass_sfx" 
                                        type="text"
					label="COM_MODULES_FIELD_MODULECLASS_SFX_LABEL"
					description="COM_MODULES_FIELD_MODULECLASS_SFX_DESC" 
                                />
				<field 
                                        name="owncache" 
                                        type="list" 
                                        default="1"
					label="COM_MODULES_FIELD_CACHING_LABEL" 
                                        description="COM_MODULES_FIELD_CACHING_DESC" 
                                >
					<option value="1">JGLOBAL_USE_GLOBAL</option>
					<option value="0">COM_MODULES_FIELD_VALUE_NOCACHING</option>
				</field>
				<field 
                                        name="cache_time" 
                                        type="text" 
                                        default="900"
					label="COM_MODULES_FIELD_CACHE_TIME_LABEL" 
                                        description="COM_MODULES_FIELD_CACHE_TIME_DESC"
                                />
			</fieldset>
		</fields>
	</config>
</extension>
