<?xml version="1.0" encoding="utf-8"?>
<extension type="module" version="3.0" client="site" method="upgrade">
	<name>mod_media_playlists</name>
	<author>HWD</author>
	<creationDate>@@CREATIONDATE@@</creationDate>
	<copyright>(C) 2014 Highwood Design Limited</copyright>
	<license>GNU/GPL http://www.gnu.org/copyleft/gpl.html</license>
	<authorEmail>info@hwdmediashare.co.uk</authorEmail>
	<authorUrl>http://hwdmediashare.co.uk</authorUrl>
	<version>@@VERSION@@</version>  
	<description>MOD_MEDIA_PLAYLISTS_XML_DESCRIPTION</description>
	<files>
                <filename module="mod_media_playlists">mod_media_playlists.php</filename>
		<folder>tmpl</folder>
		<filename>helper.php</filename>
		<filename>index.html</filename>
	</files>
	<languages>
		<language tag="en-GB">language/en-GB.mod_media_playlists.ini</language>
		<language tag="en-GB">language/en-GB.mod_media_playlists.sys.ini</language>
	</languages>
	<config>
		<fields 
                        name="params"
                        addfieldpath="/administrator/components/com_hwdmediashare/models/fields/"
                        addrulepath="/administrator/components/com_hwdmediashare/models/rules"     
                >
			<fieldset 
                                name="basic"                         
			>
				<field 
                                        name="count" 
                                        type="text" 
					label="MOD_MEDIA_FIELD_COUNT_LABEL"
					description="MOD_MEDIA_FIELD_COUNT_DESC" 
                                        default="6"
                                        validate="integer"
                                        filter="integer"
                                />                            
				<field 
                                        name="show_featured" 
                                        type="list" 
					label="MOD_MEDIA_FIELD_SHOWFEATURED_LABEL"
					description="MOD_MEDIA_FIELD_SHOWFEATURED_DESC"
                                        default="show"
				>
					<option value="show">JSHOW</option>
					<option value="hide">JHIDE</option>
					<option value="only">MOD_MEDIA_OPTION_ONLYFEATURED_VALUE</option>
				</field>
				<field 
                                        name="list_order_playlist" 
                                        type="playlistfullordering"
					label="MOD_MEDIA_FIELD_ORDERING_LABEL"
					description="MOD_MEDIA_FIELD_ORDERING_DESC"
					default="a.created DESC"
				>                      
				</field>                                 
			</fieldset>
                        <fieldset 
                                name="filtering"
				label="MOD_MEDIA_FIELDSET_FILTERING_LABEL"
			>
				<field name="spacer_authorfiltering" label="MOD_MEDIA_SPACER_AUTHORFILTERING" type="spacer" />
				<field 
                                        name="author_filtering_type" 
                                        type="radio"
					label="MOD_MEDIA_FIELD_AUTHORFILTERING_LABEL"
					description="MOD_MEDIA_FIELD_AUTHORFILTERING_DESC"
                                        class="btn-group btn-group-yesno"
					default="1"
				>
					<option value="1">MOD_MEDIA_OPTION_INCLUSIVE_VALUE</option>
					<option value="0">MOD_MEDIA_OPTION_EXCLUSIVE_VALUE</option>
				</field>
				<field 
                                        name="created_by" 
                                        type="sql"
					multiple="true" 
                                        size="5"
					label="MOD_MEDIA_FIELD_AUTHOR_LABEL"
					description="MOD_MEDIA_FIELD_AUTHOR_DESC"
					query="select id, name, username from #__users where id IN (select distinct(created_user_id) from #__hwdms_playlists) order by name ASC"
					key_field="id" 
                                        value_field="name"
				>
					<option value="">JOPTION_SELECT_AUTHORS</option>
				</field>
				<field name="spacer_datefiltering" label="MOD_MEDIA_SPACER_DATEFILTERING" type="spacer" />                             
				<field 
                                        name="date_filtering" 
                                        type="list" 
					label="MOD_MEDIA_FIELD_DATEFILTERING_LABEL"
					description="MOD_MEDIA_FIELD_DATEFILTERING_DESC"
                                        default="off"
				>
					<option value="off">MOD_MEDIA_OPTION_OFF_VALUE</option>
					<option value="range">MOD_MEDIA_OPTION_DATERANGE_VALUE</option>
					<option value="relative">MOD_MEDIA_OPTION_RELATIVEDAY_VALUE</option>
				</field>
				<field 
                                        name="date_field" 
                                        type="list" 
					label="MOD_MEDIA_FIELD_DATERANGEFIELD_LABEL"
					description="MOD_MEDIA_FIELD_DATERANGEFIELD_DESC"
                                        default="a.created"
				>
					<option value="a.created">MOD_MEDIA_OPTION_CREATED_VALUE</option>
					<option value="a.modified">MOD_MEDIA_OPTION_MODIFIED_VALUE</option>
					<option value="a.publish_up">MOD_MEDIA_OPTION_STARTPUBLISHING_VALUE</option>
				</field>
				<field 
                                        name="start_date_range" 
                                        type="calendar"
					format="%Y-%m-%d %H:%M:%S"
					label="MOD_MEDIA_FIELD_STARTDATE_LABEL"
					description="MOD_MEDIA_FIELD_STARTDATE_DESC"
					size="22"
					filter="user_utc" 
                                />
				<field 
                                        name="end_date_range" 
                                        type="calendar"
					format="%Y-%m-%d %H:%M:%S"
					label="MOD_MEDIA_FIELD_ENDDATE_LABEL"
					description="MOD_MEDIA_FIELD_ENDDATE_DESC"
					size="22"
					filter="user_utc" 
                                />
				<field 
                                        name="relative_date" 
                                        type="text" 
					label="MOD_MEDIA_FIELD_RELATIVEDATE_LABEL"
					description="MOD_MEDIA_FIELD_RELATIVEDATE_DESC" 
                                        default="30"
                                />
			</fieldset>
			<fieldset 
                                name="display"
				label="MOD_MEDIA_FIELDSET_DISPLAY_LABEL"
			>
                                <field
                                        name="list_columns"
                                        type="list"
                                        label="MOD_MEDIA_FIELD_COLUMNS_LABEL"
                                        description="MOD_MEDIA_FIELD_COLUMNS_DESC"
                                        default=""
                                >
                                        <option value="">JGLOBAL_USE_GLOBAL</option>
                                        <option value="1">1</option>
                                        <option value="2">2</option>
                                        <option value="3">3</option>
                                        <option value="4">4</option>
                                        <option value="5">5</option>
                                        <option value="6">6</option>
                                </field>                            
                                <field
                                        name="list_meta_title"
                                        type="radio"
                                        label="MOD_MEDIA_FIELD_SHOW_TITLE_LABEL"
                                        description="MOD_MEDIA_FIELD_SHOW_TITLE_DESC"
                                        class="btn-group btn-group-yesno"
                                        default=""
                                >
                                        <option value="1">JYES</option>
                                        <option value="0">JNO</option>
                                        <option value="">JGLOBAL_USE_GLOBAL</option>
                                </field>
                                <field
                                        name="list_meta_thumbnail"
                                        type="radio"
                                        label="MOD_MEDIA_FIELD_SHOW_THUMBNAIL_LABEL"
                                        description="MOD_MEDIA_FIELD_SHOW_THUMBNAIL_DESC"
                                        class="btn-group btn-group-yesno"
                                        default=""
                                >
                                        <option value="1">JYES</option>
                                        <option value="0">JNO</option>
                                        <option value="">JGLOBAL_USE_GLOBAL</option>
                                </field>
                                <field
                                        name="list_meta_type_icon"
                                        type="radio"
                                        label="MOD_MEDIA_FIELD_SHOW_MEDIA_TYPE_ICON_LABEL"
                                        description="MOD_MEDIA_FIELD_SHOW_MEDIA_TYPE_ICON_DESC"
                                        class="btn-group btn-group-yesno"
                                        default=""
                                >
                                        <option value="1">JYES</option>
                                        <option value="0">JNO</option>
                                        <option value="">JGLOBAL_USE_GLOBAL</option>
                                </field>                                
                                <field
                                        name="list_meta_description"
                                        type="radio"
                                        label="MOD_MEDIA_FIELD_SHOW_DESCRIPTION_LABEL"
                                        description="MOD_MEDIA_FIELD_SHOW_DESCRIPTION_DESC"
                                        class="btn-group btn-group-yesno"
                                        default=""
                                >
                                        <option value="1">JYES</option>
                                        <option value="0">JNO</option>
                                        <option value="">JGLOBAL_USE_GLOBAL</option>
                                </field> 
                                <field
                                        name="list_meta_author"
                                        type="radio"
                                        label="MOD_MEDIA_FIELD_SHOW_AUTHOR_LABEL"
                                        description="MOD_MEDIA_FIELD_SHOW_AUTHOR_DESC"
                                        class="btn-group btn-group-yesno"
                                        default=""
                                >
                                        <option value="1">JYES</option>
                                        <option value="0">JNO</option>
                                        <option value="">JGLOBAL_USE_GLOBAL</option>
                                </field>
                                <field
                                        name="list_meta_likes"
                                        type="radio"
                                        label="MOD_MEDIA_FIELD_SHOW_LIKES_LABEL"
                                        description="MOD_MEDIA_FIELD_SHOW_LIKES_DESC"
                                        class="btn-group btn-group-yesno"
                                        default=""
                                >
                                        <option value="1">JYES</option>
                                        <option value="0">JNO</option>
                                        <option value="">JGLOBAL_USE_GLOBAL</option>
                                </field>
                                <field
                                        name="list_meta_hits"
                                        type="radio"
                                        label="MOD_MEDIA_FIELD_SHOW_VIEWS_LABEL"
                                        description="MOD_MEDIA_FIELD_SHOW_VIEWS_DESC"
                                        class="btn-group btn-group-yesno"
                                        default=""
                                >
                                        <option value="1">JYES</option>
                                        <option value="0">JNO</option>
                                        <option value="">JGLOBAL_USE_GLOBAL</option>
                                </field>
                                <field
                                        name="list_meta_created"
                                        type="radio"
                                        label="MOD_MEDIA_FIELD_SHOW_DATE_CREATED_LABEL"
                                        description="MOD_MEDIA_FIELD_SHOW_DATE_CREATED_DESC"
                                        class="btn-group btn-group-yesno"
                                        default=""
                                >
                                        <option value="1">JYES</option>
                                        <option value="0">JNO</option>
                                        <option value="">JGLOBAL_USE_GLOBAL</option>
                                </field>                                                                               
                                <field 
                                        name="list_item_heading" 
                                        type="list" 
                                        label="MOD_MEDIA_FIELD_HEADING_LEVEL_LABEL"
                                        description="MOD_MEDIA_FIELD_HEADING_LEVEL_DESC"
                                        default=""
                                >
                                        <option value="">JGLOBAL_USE_GLOBAL</option>
                                        <option value="1">JH1</option>
                                        <option value="2">JH2</option>
                                        <option value="3">JH3</option>
                                        <option value="4">JH4</option>
                                        <option value="5">JH5</option>
                                        <option value="6">JH6</option>
                                </field>
                                <field 
                                        name="list_link_titles" 
                                        type="radio" 
                                        label="MOD_MEDIA_FIELD_LINKED_TITLES_LABEL"
                                        description="MOD_MEDIA_FIELD_LINKED_TITLES_LABEL"
                                        class="btn-group btn-group-yesno"
                                        default=""
                                >
                                        <option value="1">JYES</option>
                                        <option value="0">JNO</option>
                                        <option value="">JGLOBAL_USE_GLOBAL</option>
                                </field>
                                <field 
                                        name="list_link_thumbnails" 
                                        type="radio" 
                                        label="MOD_MEDIA_FIELD_LINKED_THUMBNAILS_LABEL"
                                        description="MOD_MEDIA_FIELD_LINKED_THUMBNAILS_LABEL"
                                        class="btn-group btn-group-yesno"
                                        default=""
                                >
                                        <option value="1">JYES</option>
                                        <option value="0">JNO</option>
                                        <option value="">JGLOBAL_USE_GLOBAL</option>
                                </field>
                                <field
                                        name="list_title_truncate"
                                        type="text"
                                        label="MOD_MEDIA_FIELD_TRUNCATE_TITLE_LABEL"
                                        description="MOD_MEDIA_FIELD_TRUNCATE_TITLE_DESC"
                                        default=""
                                />
                                <field
                                        name="list_desc_truncate"
                                        type="text"
                                        label="MOD_MEDIA_FIELD_TRUNCATE_DESC_LABEL"
                                        description="MOD_MEDIA_FIELD_TRUNCATE_DESC_DESC"
                                        default=""
                                />
				<field
					name="show_more_link"
					type="menuitem"
					label="MOD_MEDIA_FIELD_SHOWMORELINK_LABEL"
					description="MOD_MEDIA_FIELD_SHOWMORELINK_DESC"
					default="show"
				>
                                        <option value="show">JSHOW</option>
                                        <option value="hide">JHIDE</option>
				</field>
                                <field 
                                        name="more_link_text" 
                                        type="text" 
					label="MOD_MEDIA_FIELD_SHOWMORETEXT_LABEL"
					description="MOD_MEDIA_FIELD_SHOWMORETEXT_DESC"
                                        default=""
                                />
			</fieldset>
			<fieldset name="advanced">
				<field 
                                        name="layout" 
                                        type="modulelayout"
					label="JFIELD_ALT_LAYOUT_LABEL" 
                                        description="JFIELD_ALT_MODULE_LAYOUT_DESC" 
                                        default="_:default"
                                />                            
				<field 
                                        name="moduleclass_sfx" 
                                        type="text"
					label="COM_MODULES_FIELD_MODULECLASS_SFX_LABEL"
					description="COM_MODULES_FIELD_MODULECLASS_SFX_DESC" 
                                />
				<field 
                                        name="owncache" 
                                        type="list" 
					label="COM_MODULES_FIELD_CACHING_LABEL" 
                                        description="COM_MODULES_FIELD_CACHING_DESC" 
                                        default="1"
                                >
					<option value="1">JGLOBAL_USE_GLOBAL</option>
					<option value="0">COM_MODULES_FIELD_VALUE_NOCACHING</option>
				</field>
				<field 
                                        name="cache_time" 
                                        type="text" 
					label="COM_MODULES_FIELD_CACHE_TIME_LABEL" 
                                        description="COM_MODULES_FIELD_CACHE_TIME_DESC"
                                        default="900"
                                />
			</fieldset>
		</fields>
	</config>
</extension>
