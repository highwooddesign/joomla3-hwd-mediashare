<?xml version="1.0" encoding="utf-8"?>
<extension type="module" version="3.0" client="site" method="upgrade">
	<name>mod_hwd_vimeo_videobox</name>
	<author>HWD</author>
	<creationDate>@@CREATIONDATE@@</creationDate>
	<copyright>(C) 2014 Highwood Design Limited</copyright>
	<license>GNU/GPL http://www.gnu.org/copyleft/gpl.html</license>
	<authorEmail>info@hwdmediashare.co.uk</authorEmail>
	<authorUrl>http://hwdmediashare.co.uk</authorUrl>
	<version>@@VERSION@@</version>  
	<description>MOD_HWD_VIMEO_VIDEOBOX_XML_DESCRIPTION</description>
	<files>
		<filename module="mod_hwd_vimeo_videobox">mod_hwd_vimeo_videobox.php</filename>
		<folder>css</folder>
		<folder>images</folder>
		<folder>js</folder>
		<folder>tmpl</folder>
		<filename>helper.php</filename>
		<filename>index.html</filename>		
	</files>
	<languages>
		<language tag="en-GB">language/en-GB.mod_hwd_vimeo_videobox.ini</language>
		<language tag="en-GB">language/en-GB.mod_hwd_vimeo_videobox.sys.ini</language>
	</languages>
	<config>
		<fields name="params">
			<fieldset name="basic">
				<field 
                                        name="layout" 
                                        type="modulelayout"
					label="MOD_HWD_FIELD_LAYOUT_LABEL" 
                                        description="MOD_HWD_FIELD_LAYOUT_DESC" 
                                        default="_:default"
                                />  
				<field 
                                        name="columns" 
                                        type="list" 
					label="MOD_HWD_FIELD_MAXCOLS_LABEL"
					description="MOD_HWD_FIELD_MAXCOLS_DESC"
                                        default="3"
				>
					<option value="1">J1</option>
					<option value="2">J2</option>
					<option value="3">J3</option>
					<option value="4">J4</option>
					<option value="5">J5</option>
					<option value="6">J6</option>
				</field>                                
				<field 
                                        name="count" 
                                        type="text" 
					label="MOD_HWD_FIELD_COUNT_LABEL"
					description="MOD_HWD_FIELD_COUNT_DESC" 
                                        default="6"
                                />
				<field 
                                        name="icon" 
                                        type="radio"
					label="MOD_HWD_FIELD_ICON_LABEL"
					description="MOD_HWD_FIELD_ICON_DESC"
                                        default="1"
                                        class="btn-group btn-group-yesno"
				>
					<option value="1">JSHOW</option>
					<option value="0">JHIDE</option>
				</field>                               
			</fieldset>                    
			<fieldset 
                                name="filtering"
				label="MOD_HWD_FIELD_GROUP_FILTERING_LABEL"
			>
				<field 
                                        name="source" 
                                        type="list" 
                                        default="standard_list"
					label="MOD_HWD_FIELD_VIDEOS_LABEL"
					description="MOD_HWD_FIELD_VIDEOS_DESC"
				>
					<option value="staff_picks">MOD_HWD_OPTION_STAFFPICKS_VALUE</option>
					<option value="group">MOD_HWD_OPTION_GROUPVIDEOS_VALUE</option>
					<option value="user">MOD_HWD_OPTION_USERVIDEOS_VALUE</option>
                                        <option value="channel">MOD_HWD_OPTION_CHANNELVIDEOS_VALUE</option>
				</field>                            
				<field 
                                        name="group" 
                                        type="text" 
                                        default=""
					label="MOD_HWD_FIELD_GROUPURL_LABEL"
					description="MOD_HWD_FIELD_GROUPURL_DESC"
				/>
				<field 
                                        name="user" 
                                        type="text" 
                                        default=""
					label="MOD_HWD_FIELD_USERURL_LABEL"
					description="MOD_HWD_FIELD_USERURL_DESC"
				/>	
                                <field 
                                        name="channel" 
                                        type="text" 
                                        default=""
					label="MOD_HWD_FIELD_CHANNELURL_LABEL"
					description="MOD_HWD_FIELD_CHANNELURL_DESC"
				/>				
			</fieldset>
			<fieldset 
                                name="player"
				label="MOD_HWD_FIELD_GROUP_VIDEO_DISPLAY_LABEL"
			>
				<field 
                                        name="autoplay" 
                                        type="radio"
					default="0"
					label="MOD_HWD_FIELD_AUTOPLAY_LABEL"
					description="MOD_HWD_FIELD_AUTOPLAY_DESC"
                                        class="btn-group btn-group-yesno"
				>
                                        <option value="1">JYES</option>
					<option value="0">JNO</option>					
				</field>
				<field 
                                        name="color" 
                                        type="text"
					default=""
					label="MOD_HWD_FIELD_COLOR_LABEL"
					description="MOD_HWD_FIELD_COLOR_DESC"
				>
				</field>                                                    
                                <field 
                                        name="title" 
                                        type="radio"
					description="MOD_HWD_FIELD_TITLE_DESC"
					label="MOD_HWD_FIELD_TITLE_LABEL"
                                        default="1" 
                                        class="btn-group btn-group-yesno"
				>
                                        <option value="1">JYES</option>
                                        <option value="0">JNO</option>
				</field> 
			</fieldset>                        
			<fieldset name="advanced">
				<field 
                                        name="moduleclass_sfx" 
                                        type="text"
					label="COM_MODULES_FIELD_MODULECLASS_SFX_LABEL"
					description="COM_MODULES_FIELD_MODULECLASS_SFX_DESC" 
                                />
				<field 
                                        name="owncache" 
                                        type="list" 
                                        default="1"
					label="COM_MODULES_FIELD_CACHING_LABEL" 
                                        description="COM_MODULES_FIELD_CACHING_DESC" 
                                >
					<option value="1">JGLOBAL_USE_GLOBAL</option>
					<option value="0">COM_MODULES_FIELD_VALUE_NOCACHING</option>
				</field>
				<field 
                                        name="cache_time" 
                                        type="text" 
                                        default="900"
					label="COM_MODULES_FIELD_CACHE_TIME_LABEL" 
                                        description="COM_MODULES_FIELD_CACHE_TIME_DESC"
                                />
			</fieldset>
		</fields>
	</config>
</extension>
